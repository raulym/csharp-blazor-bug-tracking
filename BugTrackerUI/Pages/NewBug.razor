@page "/new-bug"

@using DevExpress.Blazor

<h3>Add New Bug</h3>

<EditForm Model="AddBug">
    <InputText @bind-Value="@AddBug.Title" placeHolder="Enter Title">
    </InputText>
    <InputText @bind-Value="@AddBug.Description" placeHolder="Enter Description">
    </InputText>
    <InputNumber @bind-Value="@AddBug.Priority" placeHolder="Enter Priority"
                 ParsingErrorMessage="Must be an integer value">
    </InputNumber>

    <DxTextBox @bind-Text="@AddBug.Reporter" NullText="Enter Reporter">
    </DxTextBox>
    <DxSpinEdit @bind-Value="@AddBug.System" ShowSpinButtons="false"
                NullText="Enter System"></DxSpinEdit>

    <button type="submit">Add Bug</button>
</EditForm>

@code {
    public Bug AddBug { get; set; } = new Bug();
}
